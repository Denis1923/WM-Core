<Window xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="WordMergeUtil_Core.AgreementTool.AgreementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordMergeUtil_Core.AgreementTool"
        mc:Ignorable="d"
        Loaded="OnLoad"
        Unloaded="Window_Unloaded"
        Closing="Window_Closing"
        Title="Agreement Merger Tool" Height="700" Width="1800">
    <Window.Resources>
        <ResourceDictionary>
            <telerik:IconSources x:Key="IconSources" 
                             LightBasePath="pack://application:,,,/Telerik.Windows.Controls.RichTextBoxUI;component/Images/MSOffice/" 
                             DarkBasePath="pack://application:,,,/Telerik.Windows.Controls.RichTextBoxUI;component/Images/MSOffice/Dark/"
                             ModernBasePath="pack://application:,,,/Telerik.Windows.Controls.RichTextBoxUI;component/Images/MSOffice/Modern/" />
            <local:SecondBlockNameConverter x:Key="SecondBlockNameConverter"></local:SecondBlockNameConverter>
            <Style x:Key="ParagraphUnderlineStyle" TargetType="TextBlock">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=PassConditions}" Value="True">
                        <Setter Property="Foreground" Value="Black"/>

                    </DataTrigger>

                    <DataTrigger Binding="{Binding Path=PassConditions}" Value="False">
                        <Setter Property="Foreground" Value="Gray"/>
                        <Setter Property="TextDecorations" Value="Strikethrough"/>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding Path=Deleted}" Value="True">
                        <Setter Property="Foreground" Value="Red"/>
                        <Setter Property="TextDecorations" Value="None"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ParagraphVisibleStyle" TargetType="WrapPanel">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=PassConditions}" Value="True">
                        <Setter Property="Visibility" Value="Visible"/>

                    </DataTrigger>

                    <DataTrigger Binding="{Binding Path=PassConditions}" Value="False">
                        <Setter Property="Visibility" Value="Hidden"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets\DropDownTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <telerik:RadToolBar >
                <telerik:RadButton Click="CreateDocument_Click" IsEnabled="{Binding IsUnlocked}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Создать документ"/>
                </telerik:RadButton>
                <telerik:RadButton Click="OpenDocument_Click" IsEnabled="{Binding IsUnlocked}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Открыть документ"/>
                </telerik:RadButton>
                <telerik:RadButton Click="SaveDocument_Click" IsEnabled="{Binding IsEnable}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Сохранить документ"/>
                </telerik:RadButton>
                <telerik:RadButton Click="Template_Click" IsEnabled="{Binding IsEnable}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Редактирование шаблона"/>
                </telerik:RadButton>
                <telerik:RadButton Click="DataWindow_Click" IsEnabled="{Binding IsEnable}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Набор данных"/>
                </telerik:RadButton>
                <telerik:RadToggleButton x:Name="FilterButton" Checked="FilterButton_Checked" Unchecked="FilterButton_Unchecked"  IsEnabled="{Binding IsEnable}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Фильтр"/>
                </telerik:RadToggleButton>
                <telerik:RadButton x:Name="VersionButton" Click="Version_Click" IsEnabled="{Binding IsVersionEnable}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Версии"/>
                </telerik:RadButton>
                <telerik:RadButton x:Name="CompareButton" Click="Compare_Click" IsEnabled="{Binding IsEnable}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Загрузить и сравнить"/>
                </telerik:RadButton>
                <telerik:RadToolBarSeparator />
                <telerik:RadButton Click="Test_Click" IsEnabled="{Binding IsEnable}">
                    <telerik:Label Content=""  FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Тестирование"/>
                </telerik:RadButton>

                <telerik:RadButton Click="Approve_Click" IsEnabled="{Binding IsEnable}">
                    <telerik:Label Content=""  FontFamily="{StaticResource FontAwesome}" FontSize="24" Foreground="DarkBlue" ToolTip="Выгрузить версию для утверждения"/>
                </telerik:RadButton>

            </telerik:RadToolBar>
            <Grid Grid.Row="1" Margin="4" IsEnabled="{Binding IsUnlocked}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <telerik:Label Content="Документ" Grid.Column="0"/>
                <TextBox Grid.Column="1" Margin="4" Text="{Binding SelectedDocument.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <telerik:Label Content="Версия на дату" Grid.Row="1" Grid.Column="0"/>
                <telerik:RadDatePicker x:Name="VersionDatePicker" Margin="4" Grid.Row="1" Grid.Column="1" DateTimeWatermarkContent="Введите дату" />

                <telerik:Label Content="Параграф" Grid.Row="2" Grid.Column="0"/>
                <TextBox Grid.Column="1" Grid.Row="2" Margin="4" Text="{Binding ParagraphName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <telerik:Label Content="Ссылка" Grid.Row="3" Grid.Column="0"/>
                <TextBox Grid.Column="1" Grid.Row="3" Margin="4" Text="{Binding RefName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <telerik:Label Content="Учитывать в нумерации?" Grid.Row="4" Grid.Column="0" ToolTip="Учитывать номер при пропуске"/>
                <CheckBox Grid.Column="1" Grid.Row="4" Margin="4" IsChecked="{Binding ParagraphIsFixNumeration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  ToolTip="Учитывать номер при пропуске"/>

                <telerik:Label Content="Отслеживать изменения?" Grid.Row="5" Grid.Column="0" ToolTip="Включить версионность сохранений"/>
                <CheckBox Name="TrackChangeChecker" Grid.Column="1" Grid.Row="5" Margin="4" IsChecked="{Binding SelectedDocument.TrackChanges, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Checked="TrackChangeChecker_Checked"  ToolTip="Включить версионность сохранений" IsEnabled="False"/>

                <telerik:Label Content="Тег" Grid.Row="6" Grid.Column="0"/>
                <TextBox Grid.Column="1" Grid.Row="6" Margin="4" Text="{Binding ParagraphTag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <telerik:Label Content="Приложение?" Grid.Row="7" Grid.Column="0"/>
                <CheckBox Grid.Column="1" Grid.Row="7" Margin="4" IsChecked="{Binding ParagraphIsAttachment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  ToolTip="Является ли параграф приложением?"/>

                <telerik:Label Name="IsCustomNumberingLabel" Content="Настраиваемая нумерация" Grid.Row="8" Grid.Column="0" ToolTip="Включить собственную нумерацию?"/>
                <CheckBox Name="IsCustomNumberingChecker" Grid.Column="1" Grid.Row="8" Margin="4" IsChecked="{Binding IsCustomNumbering, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Click="IsCustomNumbering_Click" ToolTip="Включить собственную нумерацию">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Numerable}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding Path=SelectedParagraph.PassConditions}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>

                <telerik:Label Name="StartNumberingFromLabel" Content="Начать нумерацию с" Grid.Row="9" Grid.Column="0" Visibility="Hidden"/>
                <TextBox Name="StartNumberingFromTextBox" Grid.Column="1" Grid.Row="9" Margin="4" Text="{Binding StartNumberingFrom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" LostFocus="StartNumberingFrom_LostFocus" PreviewTextInput="StartNumberingFrom_PreviewTextInput" Visibility="Hidden"/>
            </Grid>
            <Grid Grid.Row="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <telerik:RadListBox x:Name="ParagraphListBox" Grid.Column="1" ItemsSource="{Binding Paragraphs}" SelectedItem="{Binding SelectedParagraph, Mode=TwoWay}" IsSynchronizedWithCurrentItem="True" MouseDoubleClick="ParagraphListBox_MouseDoubleClick">
                    <telerik:RadListBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBlock Text="{Binding RelativeNo}" Foreground="Gray" MinWidth="25px"/>
                                <TextBlock Text=" "/>
                                <TextBlock Text="{Binding DisplayName}" Style="{StaticResource ParagraphUnderlineStyle}" FontWeight="Bold" ToolTip="{Binding Tooltip}"/>
                                <TextBlock Text="{Binding GlobalPostFix}"/>
                            </WrapPanel>
                        </DataTemplate>
                    </telerik:RadListBox.ItemTemplate>
                </telerik:RadListBox>
                <telerik:RadToolBar Orientation="Vertical" Grid.Column="0" >
                    <telerik:RadButton Content="" Margin="4" MinWidth="25px" IsEnabled="{Binding IsEnable}" Click="AddButton_Click" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Добавить параграф"/>
                    <telerik:RadDropDownButton Margin="4,0,4,0" DropDownPlacement="Right" ToolTip="Добавить глобальный параграф">
                        <telerik:RadDropDownButton.DropDownContent>
                            <StackPanel x:Name="GlobalContent">
                            </StackPanel>
                        </telerik:RadDropDownButton.DropDownContent>
                    </telerik:RadDropDownButton>
                    <telerik:RadToggleButton IsChecked="{Binding ContentLockedByGlobal, Mode=OneWay}" x:Name="IsGlobalButton" Checked="IsGlobalButton_Checked" Unchecked="IsGlobalButton_Unchecked" Content="" Margin="4" MinWidth="25px" Height="38px" IsEnabled="{Binding IsEnable}" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Добавить в глобальные параграфы"/>
                    <telerik:RadButton Content="" Margin="4" MinWidth="25px" IsEnabled="{Binding IsEnable}" Click="DeleteButton_Click" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Удалить параграф"/>
                    <telerik:RadToggleButton Name="DeletedParagraphVisible" Checked="DeletedParagraphVisible_Checked" Unchecked="DeletedParagraphVisible_Checked"  IsEnabled="{Binding IsEnable}">
                        <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Отобразить удаленные параграфы"/>
                    </telerik:RadToggleButton>
                    <telerik:RadButton Content="" Margin="4" MinWidth="25px" IsEnabled="{Binding IsFilterEnabled}" Click="UpButton_Click" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Переместить вверх" />
                    <telerik:RadButton Content="" Margin="4" MinWidth="25px" IsEnabled="{Binding IsFilterEnabled}" Click="DownButton_Click" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Переместить вниз" />
                    <telerik:RadButton Content="" Margin="4" MinWidth="25px" IsEnabled="{Binding IsEnable}" Click="LeftButton_Click" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Повысить уровень" />
                    <telerik:RadButton Content="" Margin="4" MinWidth="25px" IsEnabled="{Binding IsEnable}" Click="RightButton_Click" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Понизить уровень" />
                    <telerik:RadButton Content="" Margin="4" MinWidth="25px" IsEnabled="{Binding IsEnable}" Click="IsNumeric_Click" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Нумерованный"/>
                    <telerik:RadButton Content="" Margin="4" MinWidth="25px" IsEnabled="{Binding IsEnable}" Click="CopyConditions_Click" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Копировать фильтр"/>
                    <telerik:RadButton Content="" Margin="4" MinWidth="25px" Click="PasteConditions_Click" FontWeight="Bold" IsEnabled="{Binding IsConditionEnabled}" FontFamily="{StaticResource CrmSymbol}"  FontSize="24" Foreground="DarkBlue" ToolTip="Применить фильтр"/>
                </telerik:RadToolBar>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <telerik:RadToolBar  Name="ContentToolBar">
                <telerik:RadButton Click="ParagraphWizard_Click" IsEnabled="{Binding IsContentEnabled}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Мастер добавления версий"/>
                </telerik:RadButton>
                <telerik:RadButton Click="AddVersionButton_Click" IsEnabled="{Binding IsContentEnabled}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Добавить версию"/>
                </telerik:RadButton>
                <telerik:RadMenuSeparatorItem />
                <telerik:RadButton Click="DeleteVersionButton_Click" IsEnabled="{Binding IsContentEnabled}">
                    <telerik:Label Content=""  FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Удалить версию"/>
                </telerik:RadButton>
                <telerik:RadButton Click="SetDefaultButton_Click" IsEnabled="{Binding IsContentEnabled}">
                    <telerik:Label Content="" FontFamily="{StaticResource CrmSymbol}" FontSize="24" Foreground="DarkBlue" ToolTip="Сделать версией по умолчанию"/>
                </telerik:RadButton>
                <telerik:RadToolBarSeparator />
                <telerik:RadButton Click="CompareParagraphs_Click" IsEnabled="{Binding IsContentEnabled}">
                    <telerik:Label Content="" FontFamily="{StaticResource FontAwesome}" FontSize="24" Foreground="DarkBlue" ToolTip="Сравнить версии"/>
                </telerik:RadButton>
                <telerik:RadButton Click="SetAsCompareSource_Click" IsEnabled="{Binding IsContentEnabled}">
                    <telerik:Label Content="" FontFamily="{StaticResource FontAwesome}" FontSize="24" Foreground="DarkBlue" ToolTip="Отметить как исходную для сравнения"/>
                </telerik:RadButton>
                <telerik:RadButton Click="SetAsCompareTarget_Click" IsEnabled="{Binding IsContentEnabled}">
                    <telerik:Label Content="" FontFamily="{StaticResource FontAwesome}" FontSize="24" Foreground="DarkBlue" ToolTip="Отметить как целевую для сравнения"/>
                </telerik:RadButton>

            </telerik:RadToolBar>
            <telerik:RadListBox Name="ParagraphContentsListBox" Grid.Row="1" ItemsSource="{Binding ParagraphContents}" SelectedItem="{Binding SelectedParagraphContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsSynchronizedWithCurrentItem="True" MouseDoubleClick="RadListBox_MouseDoubleClick">
                <telerik:RadListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding DisplayName}" Style="{StaticResource ParagraphUnderlineStyle}" ToolTip="{Binding Tooltip}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Tooltip}" FontStyle="Italic"/>
                        </StackPanel>
                    </DataTemplate>
                </telerik:RadListBox.ItemTemplate>
            </telerik:RadListBox>
            <StackPanel Grid.Row="2">
                <Label Content="Ok"/>
                <telerik:RadPropertyGrid Name="ContentPropertyGrid" IsEnabled="{Binding IsContentUnlocked}" Item="{Binding SelectedParagraphContent}"
                                         LabelColumnWidth="140"
								 AutoGeneratePropertyDefinitions="False">
                    <telerik:RadPropertyGrid.PropertyDefinitions>
                        <telerik:PropertyDefinition Binding="{Binding Name}"
											GroupName="Общие"
											DisplayName="Наименование"
											Description="Наименование абзаца" IsReadOnly="True" />
                        <telerik:PropertyDefinition Binding="{Binding Tooltip}"
											GroupName="Общие"
											DisplayName="Условия"
											Description="Условия отображения" IsReadOnly="True" />
                        <telerik:PropertyDefinition Binding="{Binding CreatedOn}"
											GroupName="Общие"
											DisplayName="Дата создания"
											Description="Дата создания версии">
                            <telerik:PropertyDefinition.EditorTemplate>
                                <DataTemplate>
                                    <telerik:RadDateTimePicker DateTimeWatermarkContent="Введите дату" SelectedValue="{Binding CreatedOn}" />
                                </DataTemplate>
                            </telerik:PropertyDefinition.EditorTemplate>
                        </telerik:PropertyDefinition>
                        <telerik:PropertyDefinition Binding="{Binding DefaultVersion}"
											GroupName="Общие"
											DisplayName="Версия по умолчанию"
											Description="Версия по умолчанию используется, если нет других подходящих вариантов" />
                        <telerik:PropertyDefinition Binding="{Binding Approved}"
											GroupName="Общие"
											DisplayName="Утвержден"
											Description="Версия утверждена" />
                        <telerik:PropertyDefinition Binding="{Binding Comment}"
											GroupName="Общие"
											DisplayName="Комментарий"
											Description="Комментарий для версии" />
                    </telerik:RadPropertyGrid.PropertyDefinitions>

                </telerik:RadPropertyGrid>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <telerik:Label Content="Наименование" Grid.Column="0"/>
            <TextBox IsEnabled="{Binding IsContentUnlocked}" Grid.Column="1" Margin="4" Text="{Binding ParagraphContentName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!--<telerik:Label Content="Name2" Grid.Row="1" Grid.Column="0"/>
            <TextBox Name="Test" Grid.Column="1" Grid.Row="1" Margin="4"/>-->

            <!--<StackPanel Grid.Column="2" Grid.Row="1">
                <Button Content="..." Margin="4" MinWidth="25px"/>
            </StackPanel>-->

        </Grid>

        <telerik:RadRichTextBoxRibbonUI Name="radRichTextBoxRibbonUI" CollapseThresholdSize="50,50" DataContext="{Binding Commands, ElementName=editor}" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" ApplicationButtonVisibility="Hidden" ApplicationName="Содержание параграфа" Margin="4,0">
            <telerik:RadRichTextBoxRibbonUI.Resources>
                <telerik:FontFamiliesProvider x:Key="FontFamiliesProvider"/>
                <telerik:EditingContextTypeToBoolConverter x:Key="EditingContextTypeToBoolConverter"/>
            </telerik:RadRichTextBoxRibbonUI.Resources>
